{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"useDefineForClassFields": true,
		"sourceMap": true,
		"baseUrl": ".",
		"alwaysStrict": true, // Force strict mode
		"noImplicitOverride": true, // Force inheritence method checking
		"strictBindCallApply": true, // Force parameter type for function call method
		"noImplicitReturns": false, // Allow implicit return type
		"noPropertyAccessFromIndexSignature": false, // Allow loose field accessors
		"noUncheckedIndexedAccess": false, // Allow implicit types for undeclared fields
		"allowUnreachableCode": false, // Prohibit unreachable code
		"exactOptionalPropertyTypes": true, // Prohibit loose type definitions
		"noFallthroughCasesInSwitch": true, // Prohibit loose switch cases
		"noImplicitAny": true, // Prohibit implicit type
		"noUnusedLocals": true, // Prohibit unused variables
		"noUnusedParameters": true, // Prohibit unused parameters
		"resolveJsonModule": true,
		"types": [
			"webpack-env"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}
